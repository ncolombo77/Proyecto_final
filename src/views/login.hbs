<div class="loginBox">
    <h1>Inicio de sesión</h1>
    {{#if message}}
        <p>{{message}}</p>
    {{/if}}

    {{#if error}}
        <p style="color: red">{{error}}</p>
    {{/if}}


    <form class="loginForm" method="post" action="/api/sessions/login">
        <input type="email" placeholder="Correo electrónico" name="email">
        <br />
        <br />
        <input type="password" placeholder="Contraseña" name="password">
        <br />
        <br />
        <br />
        <br />
        <button class="estiloBoton">Ingresar</button>
        <br />
        <br />
        <br />
        <a href="/forgot-password">¿Olvidó su contraseña?</a>
    </form>

    <br />
    <br />
    <br />
    <br />
    <br />

    <a href="/api/sessions/loginGithub">
        <img class="GithubLogin" src="/images/Github_login.png" alt="Iniciar sesión con GitHub" />
    </a>
</div>